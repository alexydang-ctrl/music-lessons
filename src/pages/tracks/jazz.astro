---
import BaseLayout from "../../layouts/BaseLayout.astro";
import lessons from "../../data/lessons.json";
const jazz = (lessons as any[]).filter((l: any) => l.track?.toLowerCase?.() === "jazz");
---
<BaseLayout title="Jazz Track | Jazz + Classical Studio">
  <section class="hero">
    <h1>Jazz Track</h1>
    <p>Time feel, swing, comping, improv â€” explained simply with real demos.</p>
  </section>

  <section class="grid">
    {jazz.map((l: any) => (
      <a class="card" href={`/lessons/${l.slug}`}>
        <div class="meta"><span class="tag">{l.level}</span><span>{l.durationMinutes} min</span></div>
        <h3>{l.title}</h3>
        <p style="margin:0;color:var(--muted);line-height:1.55">{l.summary}</p>
      </a>
    ))}
  </section>
</BaseLayout>
