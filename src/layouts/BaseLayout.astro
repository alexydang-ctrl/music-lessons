---
const { title = "Jazz + Classical Studio", description = "" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    {description ? <meta name="description" content={description} /> : null}

    <style>
      :root{
        /* Bright, clean palette */
        --bg: #ffffff;
        --bg2: #f6f9ff;
        --panel: #ffffff;
        --text: #0b1220;
        --muted: #4b5563;
        --accent: #2563eb;     /* bright blue */
        --accent2:#06b6d4;     /* cyan pop */
        --border: rgba(2,6,23,.12);
        --shadow: 0 10px 30px rgba(2,6,23,.08);
        --radius: 16px;
      }

      *{ box-sizing: border-box; }

      body{
        margin:0;
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial;
        color: var(--text);
        line-height: 1.65;
        background:
          radial-gradient(900px 420px at 12% -10%, rgba(37,99,235,.14), transparent 60%),
          radial-gradient(700px 380px at 90% 0%, rgba(6,182,212,.12), transparent 55%),
          linear-gradient(180deg, var(--bg2), var(--bg) 35%);
      }

      a{ color: var(--accent); text-decoration:none; }
      a:hover{ text-decoration: underline; }

      .wrap{ max-width: 980px; margin: 0 auto; padding: 26px 18px 64px; }

      header{
        display:flex;
        align-items:center;
        justify-content:space-between;
        gap: 12px;
        padding: 10px 0 18px;
      }

      .brand{
        font-weight: 850;
        letter-spacing: .2px;
        padding: 8px 12px;
        border-radius: 999px;
        background: rgba(37,99,235,.08);
        border: 1px solid rgba(37,99,235,.18);
        color: var(--text);
      }

      nav{
        display:flex;
        flex-wrap: wrap;
        align-items:center;
        justify-content:flex-end;
        gap: 6px;
      }

      nav a{
        color: var(--muted);
        padding: 6px 10px;
        border-radius: 999px;
      }
      nav a:hover{
        color: var(--text);
        background: rgba(2,6,23,.06);
        text-decoration: none;
      }

      main{ display:block; }

      .hero{
        background: rgba(255,255,255,.92);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 22px;
        box-shadow: var(--shadow);
        backdrop-filter: blur(6px);
      }

      .meta{ display:flex; gap:10px; flex-wrap:wrap; margin-top:12px; color: var(--muted); }

      .tag{
        border: 1px solid var(--border);
        padding: 6px 10px;
        border-radius: 999px;
        background: rgba(2,6,23,.03);
        font-size: 12px;
        color: var(--muted);
      }

      .grid{
        display:grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 14px;
        margin-top: 16px;
      }

      .card{
        background: rgba(255,255,255,.94);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 16px;
        box-shadow: 0 6px 18px rgba(2,6,23,.06);
      }
      .card:hover{
        border-color: rgba(37,99,235,.28);
        box-shadow: 0 12px 28px rgba(37,99,235,.12);
      }

      h1{ font-size: 38px; line-height: 1.15; margin: 0 0 10px; }
      h2{ font-size: 22px; margin: 22px 0 10px; }
      h3{ margin: 10px 0 8px; }

      p{ color: rgba(11,18,32,.92); }

      /* Make default lists look nice on lesson pages */
      ul{ padding-left: 1.2rem; }
      li{ margin: .25rem 0; }

      /* Small screens */
      @media (max-width: 520px){
        .wrap{ padding: 18px 14px 48px; }
        h1{ font-size: 32px; }
      }
    </style>
  </head>

  <body>
    <div class="wrap">
      <header>
        <a class="brand" href="/">Jazz + Classical Studio</a>
        <nav>
          <a href="/">Home</a>
          <a href="/lessons">Lessons</a>
          <a href="/tracks/jazz">Jazz</a>
          <a href="/tracks/classical">Classical</a>
          <a href="/about">About</a>
        </nav>
      </header>

      <main>
        <slot />
      </main>
    </div>
  </body>
</html>